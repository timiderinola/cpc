<% provide(:title, "#{@message.title}") %>

<div id="show-message" class="container">
  <p id="notice"><%= notice %></p>

  <h2><%= @message.title %></h2>
  <p><i><%= friendly_date @message.created_at %></i> by <u><%= @message.preacher %></u></p>
  <p><b>Bible Passages: <%= @message.bible_passage %></b></p>
  <hr>
  <p><%= raw @message.content %></p>

  <% if logged_in? %>
      <%= link_to 'Edit', edit_message_path(@message) %> |
  <% end %>
  <%= link_to 'Back', messages_path %>

  <h3>Comments</h3>

  <%= render @message.comments %>

  <h4>New Comment</h4>

  <%= form_for [@message, @message.comments.build] do |f| %>
      <div class='form-group'>
        <%= f.label :author %><br>
        <%= f.text_field :author, class: 'form-control', placeholder:'Your name', required:'required' %>
        <%= f.label :email %><br>
        <%= f.text_field :email, class: 'form-control', placeholder:'Your email address' %>
      </div>
      <div class='form-group'>
        <%= f.label :content %><br>
        <%= f.text_area :content, class: 'form-control', placeholder:'Your comments/questions', required: true %>
      </div>
      <div class='actions'>
        <%= f.submit class:'btn btn-primary' %>
      </div>
  <% end %>
</div>
