<p id="notice"><%= notice %></p>

<h2><%= @message.title %></h2>

<p><%= raw @message.content %></p>

<%= link_to 'Edit', edit_message_path(@message) %> |
<%= link_to 'Back', messages_path %>

<h3>Comments</h3>

<%= render @message.comments %> 
<%# renders app/views/comments/_comment.html.erb and displays each message with the template there %>

<h4>New Comment</h4>

<%= form_for [@message, @message.comments.build] do |f| %>
  <div class='field'>
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </div>
  <div class='field'>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class='actions'>
    <%= f.submit %>
  </div>
<% end %>