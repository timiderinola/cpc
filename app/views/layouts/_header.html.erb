<header >
  <nav id="navbar" class="navbar navbar-default navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container-fluid" id="upper_bar">
      <ul id="social-links">
        <li><a href="#"><%= image_tag 'fb-icon.png', alt: 'Facebook' %></a></li>
        <li><a href="#"><%= image_tag 'twitter-icon.png', alt: 'Twitter' %></a></li>
        <li><a href="#"><%= image_tag 'youtube-icon.png', alt: 'Youtube' %></a></li>
        <li><a href="#"><%= image_tag 'google-plus-icon.png', alt: 'Google+' %></a></li>
      </ul>
    </div>
    <div  id="second_bar" class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div id="menu" class="navbar-header">
        <%= link_to image_tag('evg_logo.png', class: 'navbar-brand', alt:'Logo'), root_path %>
        <button type="button" class="navbar-toggle collapsed dropdown-toggle" data-toggle="collapse" data-target="#navbar-collapse">
          <span id="menu-button">MENU <span class="caret"></span></span>
        </button>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="navbar-collapse">
        <ul id="nav-links" class="nav container">
          <li><%= link_to 'HOME', root_path, class: 'selected' %></li>
          <li><%= link_to 'WHO WE ARE', about_path %></li>
          <li><%= link_to 'EVENTS', events_path %></li>
          <li id="logo">
            <%= link_to image_tag('evg_logo.png', alt: 'Logo'), root_path %>
          </li>
          <li><%= link_to 'RESOURCES', resources_path %></li>
          <li><%= link_to 'GALLERY', gallery_path %></li>
          <li><%= link_to 'CONTACT', contacts_path %></li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
</header>