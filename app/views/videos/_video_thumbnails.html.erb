<% @videos = Video.order('created_at DESC').offset(1).limit(2) %>
<% if @videos %>
  <% @videos.each do |video| %>
    <li><%= link_to image_tag("https://img.youtube.com/vi/#{video.uid}/mqdefault.jpg", alt: video.title, class: 'img img-responsive img-rounded'), "https://www.youtube.com/watch?v=#{video.uid}", target: '_blank' %></li>
  <% end %>
<% end %>